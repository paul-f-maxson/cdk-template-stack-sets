{
  "name": "cdk-template-stack-sets",
  "packageManager": "yarn@3.5.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "tag-staging": "git tag --annotate --force --message 'move to $(git rev-parse --short HEAD)' staging",
    "push": "git push --follow-tags staging master",
    "pull": "git pull --prune --tags origin master",
    "stage": "yarn run tag-staging && git push --follow-tags staging master"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@eslint/js": "^8.39.0",
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "aws-cdk": "^2.77.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "resolutions": {
    "app": "portal:packages/app",
    "pipeline": "portal:packages/pipeline"
  }
}
